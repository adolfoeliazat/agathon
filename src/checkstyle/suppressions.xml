<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>

    <!-- Main Exclusions -->

    <suppress checks="ClassFanOutComplexityCheck"
              files="CassandraConfiguration(Reader|Writer).java"/>

    <!-- Test Exclusions -->

    <suppress checks="MultipleStringLiteralsCheck"
              files=".*Test.java"/>
    <suppress checks="AbstractClassNameCheck"
              files=".*Test.java"/>
    <suppress checks="ClassDataAbstractionCouplingCheck"
              files="CassandraConfigurationTest.java"/>
    <suppress checks="ClassDataAbstractionCouplingCheck"
              files="AbstractConfigurationWriterTest.java"/>

</suppressions>

